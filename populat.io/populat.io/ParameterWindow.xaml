                            <Label Grid.Row="4" Grid.Column="0" Content="Age 35 - 54" Margin="5 5 5 5"/>
                            <TextBox x:Name="new_age35_54" Grid.Row="4" Grid.Column="1" Margin="5 5 5 5"/>
                            <Label Grid.Row="5" Grid.Column="0" Content="Age 55 - up" Margin="5 5 5 5"/>
                            <TextBox x:Name="new_age55_up" Grid.Row="5" Grid.Column="1" Margin="5 5 5 5"/>
                            <Label Grid.Row="6" Grid.Column="0" Content="AverageAge" Margin="5 5 5 5"/>
                            <TextBox x:Name="new_averageAge" Grid.Row="6" Grid.Column="1" Margin="5 5 5 5"/>
                            <Label Grid.Row="7" Grid.Column="0" Content="BirthRate" Margin="5 5 5 5"/>
                            <TextBox x:Name="new_birthRate" Grid.Row="7" Grid.Column="1" Margin="5 5 5 5"/>
                            <Label Grid.Row="8" Grid.Column="0" Content="DeathRate" Margin="5 5 5 5"/>
