                            <Label Grid.Row="9" Grid.Column="0" Content="Emigation" Margin="5 5 5 5"/>
                            <TextBox x:Name="new_emigration" Grid.Row="9" Grid.Column="1" Margin="5 5 5 5"/>
                            <Label Grid.Row="10" Grid.Column="0" Content="Immigration" Margin="5 5 5 5"/>
                            <TextBox x:Name="new_immigration" Grid.Row="10" Grid.Column="1" Margin="5 5 5 5"/>
                            <Label Grid.Row="11" Grid.Column="0" Content="FemaleRate" Margin="5 5 5 5"/>
                            <TextBox x:Name="new_femaleRate" Grid.Row="11" Grid.Column="1" Margin="5 5 5 5"/>
                            <Label Grid.Row="12" Grid.Column="0" Content="MaleRate" Margin="5 5 5 5"/>
                            <TextBox x:Name="new_maleRate" Grid.Row="12" Grid.Column="1"  Margin="5 5 5 5"/>
                            <Label Grid.Row="13" Grid.Column="0" Content="GrowthRate" Margin="5 5 5 5"/>
                            <TextBox x:Name="new_growthRate" Grid.Row="13" Grid.Column="1" Margin="5 5 5 5"/>
                            <Label Grid.Row="14" Grid.Column="0" Content="PopulationNr" Margin="5 5 5 5"/>
                            <TextBox x:Name="new_populationNr" Grid.Row="14" Grid.Column="1" Margin="5 5 5 5"/>
                            <Button Name="export_city" Content="Export csv" Grid.Column="1" Grid.Row="15" Margin="148.4,3.2,112,9.8" Click ="btn_exportCsv"/>
                            <Button Content="Pick city" Margin="37.4,2.2,235,9.8" Grid.Row="15" Grid.Column="1" Click="Button_Click"/>
                        </Grid>
                    </StackPanel>
                </TabItem>

            </TabControl>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
            </Grid>
            <StackPanel>
                <!--<Grid Margin="0,0,0.4,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
